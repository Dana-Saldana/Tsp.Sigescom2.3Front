<div ng-show="reporteador.SeccionSeleccionada=='seccion2'">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Criterios y filtros </h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-3 " id="input-establecimiento">
                    <div class="form-group">
                        <label for="punto1" class="title-report">Establecimiento*</label>
                        <select id="" class="select2 form-control" ng-model="reporteador.Reservas.EstablecimientoSeleccionado" ng-options="item as item.Nombre for item in data.Establecimientos  track by item.Id" required ng-change="Reservas_EstablecimientoChanged()"></select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="dateEnd">Fecha y Hora Desde </label>
                            <div>
                                <input type="text" datetime="dd/MM/yyyy" ng-model="reporteador.Reservas.FechaDesde" ng-change="Reservas_ActualizarURLs()" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="dateEnd">Fecha y Hora Hasta </label>
                            <div>
                                <input type="text" datetime="dd/MM/yyyy" ng-model="reporteador.Reservas.FechaHasta" ng-change="Reservas_ActualizarURLs()" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <div>
                            <label class="col-md-6">Tipos de Habitación</label>
                            <div class="checkbox checkbox-primary col-md-6 no-margin">
                                <input id="todosTiposHabitación" type="checkbox" class="styled" ng-model="reporteador.Reservas.SeleccionarTodosTiposHabitacion" ng-change="Reservas_TodosTiposHabitacionChanged()" />
                                <label class="negrita">Todos</label>
                            </div>
                        </div>
                        <select id="Reservas_TiposHabitacion" class="select2 form-control" ng-model="reporteador.Reservas.TiposHabitacionSeleccionados" ng-change="Reservas_TiposHabitacionChanged()" ng-options="item as item.Nombre for item in data.TiposHabitacion  track by item.Id" multiple="multiple"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="contenedor-reportes">
        <div class="col-md-3 col-xs-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Reservas Confirmadas</h3>
                    </div>
                    <div class="box-body">
                        <div class="row ">
                            <div class="flex-center">
                                <a title="Reservas confirmadas" class="btn btn-primary btn-flat" ng-disabled="!reporteador.Reservas.Confirmadas.ActivarBotonVer" ng-href="{{URLReservas_Confirmadas}}">VER</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
