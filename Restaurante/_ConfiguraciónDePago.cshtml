

<label for="comprobanteDePago">Comprobante de pago: </label>
<br />

<div>
    <input class="radio radio-primary radio-inline" type="radio" ng-model="comprobanteDePago" value="NV" selected />
    <label for="NV">NV</label>
</div>
<div>
    <input class="radio radio-primary radio-inline" type="radio" ng-model="comprobanteDePago" value="FACT" />
    <label for="FACT">FACT</label>
</div>
<div class="radio radio-primary radio-inline">
    <input type="radio" ng-model="comprobanteDePago" value="BV" />
    <label for="BV">BV</label>
</div>


<div ng-if="comprobanteDePago=='NV'">
    <div>
        <label for="alias">ALIAS</label>
        <input class="form-control " ng-model="alias" type="text" value="|VARIOS" placeholder="Ingrese un Alias" />
    </div>
    <div class=" pull-left">
        <input type="checkbox" ng-model="detallado" value="detallado" />
        <label for="detallado">Detallado</label>
    </div>
    <button class="btn btn-primary pull-right">Guardar</button>
</div>
<div ng-if="comprobanteDePago=='FACT'">
    <div>
        <label for="documento">RUC</label>
        <div class="row">
            <div class="col-lg-8">
                <input type="number" class="form-control" ng-model="documento" placeholder="Ingrese número de RUC" />
            </div>
        </div>
        <div class="row" style="margin: 20px 20px 10px 0px;">
            <div class="col-lg-4">
                <input class=" pull-left" type="checkbox" ng-model="detallado" value="detallado" />
                <label for="detallado">Detallado</label>
            </div>
            <div class="col-lg-4">
                <button class="btn btn-primary pull-right">Guardar</button>
            </div>
        </div>
    </div>
</div>
<div ng-if="comprobanteDePago=='BV'">
    <div>
        <div class="row">
            <div class="col-lg-4">
                <label for="documento">Documento:</label>
                <input type="number" class="form-control" ng-model="documento" placeholder="Ingrese número de documento" />
            </div>
            <div class="col-lg-4">
                <label for="alias">ALIAS</label>
                <input type="text" class="form-control" ng-model="alias" placeholder="Ingrese un Alias para el Cliente" />
            </div>
        </div>
        <div class="row" style="margin: 20px 20px 10px 0px;">
            <div class="col-lg-4">
                <input class=" pull-left" type="checkbox" ng-model="detallado" value="detallado" />
                <label for="detallado">Detallado</label>
            </div>
            <div class="col-lg-4">
                <button class="btn btn-primary pull-right">Guardar</button>
            </div>
        </div>
    </div>
</div>
