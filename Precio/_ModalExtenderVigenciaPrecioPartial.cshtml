                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>Tarifa:</label>
                                        <select id="tarifa" class="select2 form-control" ng-model="precio.Tarifa"
                                            ng-options="item as item.Nombre for item in tarifas track by item.Id" required></select>
                                    </div>
                                    <div class="col-md-4">
                                        <label>Desde:</label>
                                        <input class="datepicker-start form-control center" ng-model="precio.FechaDesde" required />
                                    </div>
                                    <div class="col-md-4">
                                        <label>Hasta:</label>
                                        <input class="datepicker-end form-control center" ng-model="precio.FechaHasta" required />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label for="descripcion">Descripción:</label>
                                <textarea id="descipcion" class="form-control" ng-model="precio.Descripcion" required></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a ng-disabled="precioForm.$invalid" ng-click="guardarPrecio(precio)" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-floppy-disk"></span> GUARDAR PRECIO</a>
