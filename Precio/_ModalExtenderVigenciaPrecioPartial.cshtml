                                            </div>
                                            <div class="col-md-12">
                                                <label class="col-md-12">Precio Promedio:  {{productoPrecio.PromedioPrecioCompra}}</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 padding-0">
                                            <div class="col-md-12">Venta</div>
                                            <div class="col-md-12" ng-repeat="item in productoPrecio.PreciosVenta">
