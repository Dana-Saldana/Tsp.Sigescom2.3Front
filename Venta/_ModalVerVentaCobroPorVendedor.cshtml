<div id="modal-ver-venta-cobro-por-vendedor" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <div class="col-md-12">
                    <h4 class="modal-title">DETALLE DE VENTA</h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label class="col-md-12 ng-cloak">FECHA : {{verVentasYCobrosPorVendedor.Fecha}}</label>
                    </div>
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="box">
                                            <div class="box-body">
                                                <div class="row">
                                                    <label class="col-md-12 ng-cloak" ng-show="verVentasYCobrosPorVendedor.PuntoDeVenta != ''">PUNTO DE VENTA : {{verVentasYCobrosPorVendedor.PuntoDeVenta}}</label>
                                                    <label class="col-md-12 ng-cloak" ng-show="verVentasYCobrosPorVendedor.Almacen != ''">ALMACEN : {{verVentasYCobrosPorVendedor.Almacen}}</label>
                                                    <label class="col-md-12 ng-cloak" ng-show="verVentasYCobrosPorVendedor.Caja != ''" >CAJA : {{verVentasYCobrosPorVendedor.Caja}}</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="box">
                                            <div class="box-body">
                                                <div class="row">
                                                    <label class="col-md-12 ng-cloak" ng-show="verVentasYCobrosPorVendedor.Vendedor != ''">VENDEDOR : {{verVentasYCobrosPorVendedor.Vendedor}}</label>
                                                    <label class="col-md-12 ng-cloak" ng-show="verVentasYCobrosPorVendedor.Almacenero != ''">ALMACENERO : {{verVentasYCobrosPorVendedor.Almacenero}}</label>
                                                    <label class="col-md-12 ng-cloak" ng-show="verVentasYCobrosPorVendedor.Cajero != ''">CAJERO : {{verVentasYCobrosPorVendedor.Cajero}}</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="box">
                                            <div class="box-body">
                                                <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12 table-responsive">
                                                    <table id="tabla-ver-venta" class="table table-stripped table-bordered ng-cloak" style="padding: 0;">
                                                        <thead>
                                                            <tr>
                                                                <th rowspan="2" class="col-md-1">N°</th>
                                                                <th rowspan="2" class="col-md-3">CLIENTE</th>
                                                                @*<th rowspan="2" class="col-md-1">SALDO ANTERIOR</th>*@
                                                                <th colspan="5" class="col-md-6">ENTREGA</th>
                                                                <th rowspan="2" class="col-md-2">COBRO</th>
                                                                @*<th rowspan="2" class="col-md-1">SALDO ACTUAL</th>*@
                                                            </tr>
                                                            <tr>
                                                                <th class="col-md-1 col-xs-12">N°</th>
                                                                <th class="col-md-2 col-xs-12">CONCEPTO</th>
                                                                <th class="col-md-1 col-xs-12">CANTIDAD</th>
                                                                <th class="col-md-1 col-xs-12">P.U</th>
                                                                <th class="col-md-1 col-xs-12">IMPORTE</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody >
                                                            <tr ng-repeat="cliente in verVentasYCobrosPorVendedor.Clientes" ng-init="parentIndex=$index">
                                                                <td>{{parentIndex+1}}</td>
                                                                <td>{{cliente.Cliente}}</td>
                                                                @*<td>{{cliente.SaldoAnterior}}</td>*@
                                                                <td colspan="5" style="padding: 0; margin: 0;">
                                                                    <table class="table table-hover table-bordered" style="margin: 0">
                                                                        <tbody style="font-size:13px" class="ng-cloak">
                                                                            <tr ng-repeat="item in cliente.Detalles">
                                                                                <td class="col-md-1 col-xs-1">{{$index + 1}}</td>
                                                                                <td class="col-md-2 col-xs-2">{{item.NombreConcepto}}</td>
                                                                                <td class="col-md-1 col-xs-1">{{item.Cantidad|number:numeroDecimalesEnCantidad}}</td>
                                                                                <td class="col-md-1 col-xs-1">{{item.PrecioUnitario|number:numeroDecimalesEnPrecio}}</td>
                                                                                <td class="col-md-1 col-xs-1">{{item.Importe}}</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td colspan="4" rowspan="2"><strong>IMPORTE TOTAL</strong></td>
                                                                                <td>{{cliente.ImporteTotal}}</td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>
                                                                </td>
                                                                <td>{{cliente.Cobro}}</td>
                                                                @*<td>{{cliente.SaldoActual}}</td>*@
                                                            </tr>
                                                        </tbody>

                                                        <tr>
                                                            <td colspan="2"></td>
                                                            <td colspan="4"><strong style="font-size: 16px">IMPORTE TOTAL    </strong> </td>
                                                            <td><strong>{{verVentasYCobrosPorVendedor.ImporteTotal}}</strong>  </td>
                                                            <td> <strong>{{verVentasYCobrosPorVendedor.CobroTotal}}</strong> </td>
                                                            @*<td>{{verVentasYCobrosPorVendedor.SaldoTotal}}</td>*@
                                                        </tr>
                                                    </table>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" ng-click="cerrarVerVentaYCobro()" title="CANCELAR" class="btn btn-md btn-danger"><span class="glyphicon glyphicon-remove"></span> CERRAR</button>
            </div>
        </div>
    </div>
</div>

