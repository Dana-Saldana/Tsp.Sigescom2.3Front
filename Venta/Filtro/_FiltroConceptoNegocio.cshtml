
<div class="col-md-12" ng-if="modoDeSeleccionDeConceptoDeNegocio == 3">

    <div class="row" style="margin-bottom: 3px;">
        <div class="col-md-12">
            <div class="row">
                <div class="col-xs-12 col-md-5 col-md-offset-3">

                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Buscar ..." ng-model="venta.NombreABuscar" uppercase-only ng-enter="obtenerConceptosDeNegociosComercialesParaVentaPorNombre()">
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-primary" ng-click="obtenerConceptosDeNegociosComercialesParaVentaPorNombre()"><i class="glyphicon glyphicon-search" title="Buscar conceptos de negocios"></i></button>
                            <button type="button" class="btn btn-danger" ng-click="reinicializarFiltros()" title="Limpiar filtros"><i class="glyphicon glyphicon-trash"></i> </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <uib-accordion close-others="oneAtATime">
                <div uib-accordion-group class="panel-primary accordion-panel gl" is-open="venta.DesplegarAcordion">
                    <uib-accordion-heading>
                        <span class="span-title">
                            Ver Conceptos Negocios     <i class="pull-right glyphicon" ng-class="{'glyphicon-minus-sign': venta.DesplegarAcordion, 'glyphicon-plus-sign': !venta.DesplegarAcordion}"></i>
                        </span>
                    </uib-accordion-heading>
                    <div class="col-md-12  scroll-x" ng-cloak>
                        <div class="row">
                     
                            <div class="col-xs-12 col-md-12">

                                <div class="col-xs-12 col-md-3" ng-repeat="filtro in tmpFiltrosConOpciones ">
                                    <h3 class="title-filter">{{filtro.Nombre}}</h3>
                                    <div class="col-xs-12 col-md-12 scroll-y-200 ">
                                        <ul class="sortoptions">
                                            <li ng-repeat="opcion in filtro.Opciones">
                                                <div class="checkbox checkbox-primary" style="font-size:12px;">
                                                    <input id="checkbox2-{{opcion.Valor}}" ng-class="styled" type="checkbox" ng-model="opcion.EsSeleccionado" ng-checked="opcion.EsSeleccionado" ng-click="filtrarConceptoNegociosComercialesSegunElValorDeCaracteristica()">
                                                    <label for="checkbox2-{{opcion.Valor}}">
                                                        {{opcion.Valor}}
                                                    </label>
                                                    <span>({{opcion.Cantidad}})</span>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 scroll-y-250">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 table-responsive">
                                <table class="table table-bordered table-striped dataTable table-hover" ng-cloak>
                                    <thead>
                                        <tr>
                                            <th>N°</th>
                                            <th>CÓDIGO</th>
                                            <th>CONCEPTO</th>
                                            <th>STOCK</th>
                                            <th>PRECIO</th>
                                            <th>ACCIÓN</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in tmpListaConceptosNegociosComercialesPorNombre | unique: 'Id' " ng-cloak>
                                            <td>{{$index+1}}</td>
                                            <td style="text-align:left">{{item.CodigoBarra}}</td>
                                            <td style="text-align:left">{{item.Nombre}}</td>
                                            <td style="text-align:right">{{item.Stock}}</td>
                                            <td style="text-align:right">{{item.PrecioVenta}}</td>
                                            <td>
                                                <a class="btn btn-success btn-sm" ng-click="agregarConceptoNegocioComericalAlDetalle(item)"><span class="glyphicon glyphicon-plus"> </span></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </uib-accordion>
        </div>
    </div>

    <br />
</div>
