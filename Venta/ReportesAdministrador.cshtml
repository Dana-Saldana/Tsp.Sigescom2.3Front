                                    <div class="input-group">
                                        <input type="text" id="horaIndividual" ng-model="reporte.HoraFinal" ng-change="actualizarURLsAdministrador()" class="form-control timepickerIndividual">
                                        <div class="input-group-addon">
                                            <i class="fa fa-clock-o"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--REPORTE DE PUNTOS DE VENTA POR COMPROBANTE -->
