<div ng-controller="reporteVentaController" ng-init="nuevoReporteGerente()">
    <!--=====================================================================    INPUTS DATETIME =========================================================================-->
    <div class="date-fixed">
        <div class="box box-success">
            <div class="color-palette-set" style="margin-bottom: 0px;">
                <div class="bg-green color-palette">REPORTE DE VENTAS</div>
            </div>
            @*<div class="box-header with-border">
                    <h3 class="box-title">Seleccione Periodo</h3>
                </div>*@
            <div class="box-body" style="padding-left: 15px; padding-bottom: 0px;">
                <form autocomplete="off">
                    <div class="row">
                        <div class="col-md-3 col-xs-6">
                            <div class="form-group">
                                <label for="dateStart">Fecha y Hora Inicial </label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input id="dateStart" ng-model="reporte.FechaInicio" ng-change="actualizarURLsAdministrador()" placeholder="dd/mm/aaaa" class="form-control pull-right datepicker-start" data-date-start-date='@ViewBag.diasAntesDisponibles' data-date-end-date="0d" />
                                </div>
                            </div>
                            <div class="bootstrap-timepicker">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" id="horaIndividual" ng-model="reporte.HoraInicio" ng-change="actualizarURLsAdministrador()" class="form-control timepickerIndividual">
                                        <div class="input-group-addon">
                                            <i class="fa fa-clock-o"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-xs-6">
                            <div class="form-group">
                                <label for="dateEnd">Fecha y Hora Final</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input id="dateEnd" ng-model="reporte.FechaFinal" ng-change="actualizarURLsAdministrador()" placeholder="dd/mm/aaaa" class="form-control pull-right  datepicker-end" data-date-start-date='@ViewBag.diasAntesDisponibles' data-date-end-date="0d" />
                                </div>
                            </div>
