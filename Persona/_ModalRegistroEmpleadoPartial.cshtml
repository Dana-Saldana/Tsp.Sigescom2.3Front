<div id="modal-registro" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" ng-init="initModalRegistroEmpleado()">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">REGISTRO DE EMPLEADO</h4>
            </div>
            <div class="modal-body">
                <form name="empleadoForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box box-success">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Datos Validación</h3>
                                </div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="tipoDocumento">Tipo Documento: *</label>
                                                    <select id="tipoDocumento" class="select2 form-control" ng-model="empleado.TipoDocumentoIdentidad" ng-change="validarNumero()" ng-options="item as item.Nombre for item in tiposDeDocumentosDeIdentidad track by item.Id" required> 
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="numeroDocumento">N° Documento: *</label>
                                                    <input id="numeroDocumento" class="form-control" placeholder="Número Documento" ng-blur="validarNumero()" ng-paste="removeSpacesInPaste($event.originalEvent)" ng-model="empleado.NumeroDocumentoIdentidad" maxlength="{{longitudCaracteresTipoDocumentoIdentidad}}" required/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="box box-success">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Datos Generales</h3>
                                </div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="apellidoPaterno">Apellido Paterno: *</label>
                                                    <input id="apellidoP" placeholder="Apellido Paterno" class="form-control" uppercase-only ng-model="empleado.ApellidoPaterno" required />
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="apellidoM">Apellido Materno: *</label>
                                                    <input id="apellidoM" placeholder="Apellido Materno" class="form-control" uppercase-only ng-model="empleado.ApellidoMaterno" required/>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="nombres">Nombres: *</label>
                                                    <input id="nombres" placeholder="Nombres" class="form-control" uppercase-only ng-model="empleado.Nombres" required />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="estado">Estado Civil: * </label>
                                                    <select id="estado" class="select2 form-control" ng-model="empleado.EstadoLegalActor" ng-options="item as item.Nombre for item in tiposDeEstadoLegal track by item.Id" required></select>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="sexo">Sexo: *</label>
                                                    <select id="sexo" class="select2 form-control" ng-model="empleado.ClaseActor" ng-options="item as item.Nombre for item in tiposDeClaseActor track by item.Id" required></select>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="codigo">Código: </label>
                                                    <input id="codigo" placeholder="Codigo" class="form-control" uppercase-only ng-model="empleado.Codigo"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-xs-4">
                                                <div class="form-group">
                                                    <label for="telefono">Teléfono:</label>
                                                    <input id="telefono" placeholder="teléfono" class="form-control" ng-model="empleado.Telefono" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="correo">Correo:</label>
                                                    <input id="correo" placeholder="correo" class="form-control" @*type="email"*@ ng-change="copiarCorreoAUsuario()" ng-model="empleado.Correo" />
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                                <div class="form-group">
                                                    <label for="rol-empleado">Roles: </label>
                                                    <select class="select2 form-control" id="rol-empleado" ng-model="empleado.Roles" ng-options="item as item.Nombre for item in rolesPersonal track by item.Id" multiple="multiple"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                      <div class="row">
                                          <div class="col-md-12">
                                              <div class="col-md-4">
                                                  <div class="form-group">
                                                      <label for="fechaNacimiento">Fecha De Nacimiento: </label>
                                                      <input id="fechaNacimiento" placeholder="dd/mm/aaaa" class="datepicker form-control" ng-model="empleado.FechaNacimiento" ng-init="FechaNacimiento()" />
                                                  </div>
                                              </div>
                                          </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="box box-success">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Direcciones</h3>
                                </div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label for="ubigeo">Ubigeo: </label>
                                                    <select id="ubigeo" class="select2 form-control" ng-disabled="deshabilitar" ng-model="direccion.Ubigeo" ng-options="item as item.Nombre for item in ubigeosPeru track by item.Id"></select>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="detalle">Detalle</label>
                                                    <input id="detalle" class="form-control" placeholder="INGRESE DIRECCION" uppercase-only ng-model="direccion.Detalle" />
                                                </div>
                                            </div>
                                            <div class="hidden">
                                                    <label for="tipo">Tipo: </label>
                                                    <select id="tipo" class="select2 form-control" ng-model="direccion.Tipo" ng-options="item as item.Nombre for item in tiposDeDireccion track by item.Id"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <h5>(*) Datos Obligatorios </h5>
            </div>
            <div class="modal-footer">
                <button ng-click="guardar()" class="btn btn-primary btn-sm  pull-left">
                    <span class="glyphicon glyphicon-floppy-disk"></span> GUARDAR
                </button>@*ng-disabled="empleadoForm.$invalid"*@
                <button data-dismiss="modal" title="Cerrar" class="btn btn-sm btn-danger">
                    <span class="glyphicon glyphicon-remove"></span>
                    CERRAR
                </button>
            </div>

        </div>

    </div>
</div>
