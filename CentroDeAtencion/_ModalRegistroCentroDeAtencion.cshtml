<div id="modal-registro-centro-de-atencion" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" ng-init="inicializadorCentroDeAtencion()">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">REGISTRO CENTRO DE ATENCIÓN</h4>
            </div>
            <div class="modal-body">
                <form name="centroDeAtencionForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box box-success">
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-xs-4">
                                                <div class="form-group">
                                                    <label for="codigo">Codigo: </label>
                                                    <input id="codigo" placeholder="Codigo" class="form-control" ng-model="centroDeAtencion.Codigo" />
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                                <div class="form-group">
                                                    <label for="nombre">Nombre: </label>
                                                    <input id="nombre" placeholder="Nombre" class="form-control" ng-model="centroDeAtencion.Nombre" required />
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                                <div class="form-group">
                                                    <label for="rol-centro-de-atencion">Roles: </label>
                                                    <select class="select2 form-control" id="rol-centro-de-atencion" ng-model="centroDeAtencion.Roles" ng-change="verificarSalidaBienesSinStock()" ng-options="item as item.Nombre for item in rolesCentroDeAtencion track by item.Id" multiple="multiple"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="col-md-4" ng-show="mostrarSelectorSalidaBienesSinStock">
                                                <div class="checkbox checkbox-primary">
                                                    <input id="salidabienessinstock" type="checkbox" class="styled" ng-model="centroDeAtencion.SalidaBienesSinStock" />
                                                    <label for="salidabienessinstock">SALIDA DE BIENES SIN STOCK</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button ng-disabled="centroDeAtencionForm.$invalid" ng-click="crearCentroDeAtencion()" class="btn btn-sm btn-primary pull-left " title="Guardar">
                    <span class="glyphicon glyphicon-floppy-disk"></span>
                    GUARDAR
                </button>
                <button data-dismiss="modal" title="Cerrar" class="btn btn-sm btn-danger">
                    <span class="glyphicon glyphicon-remove"></span>
                    CERRAR
                </button>
            </div>
        </div>
    </div>
</div>
