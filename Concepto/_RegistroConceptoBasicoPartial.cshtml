<form name="conceptoForm">
    <div class=" col-xs-12 col-md-12">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">DATOS GENERALES: </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="col-xs-12 col-sm-12 col-md-2 ">
                                    <div class="mt-10">
                                        <label>Tipo: </label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-3" ng-show="permitirRegistroDeBien">
                                    <div class="form-group">
                                        <div class="radio radio-primary">
                                            <input type="radio" id="radio-bien" ng-model="concepto.Valor" ng-value="'1'" name="tipoConcepto" required>
                                            <label for="radio-bien">
                                                Bien
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-3" ng-show="permitirRegistroDeServicio">
                                    <div class="form-group">
                                        <div class="radio radio-primary">
                                            <input type="radio" id="radio-servicio" ng-model="concepto.Valor" ng-value="'0'" name="tipoConcepto">
                                            <label for="radio-servicio">
                                                Servicio
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 ">
                                <div class="col-md-6">
                                    <label for="nombre">Nombre: </label>
                                    <input id="nombre" ng-model="concepto.Nombre" uppercase-only class="form-control" placeholder="Nombre" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="categoria">Categoría: </label>
                                    <select id="categoria" class="select2 form-control" multiple="multiple" reset-search-input="true" ng-model="concepto.Categorias" ng-options="item as item.Nombre for item in categorias track by item.Id"></select>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-12">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">CARACTERISTICAS: </div>
                    <div class="panel-body">
                        <div class="row">
                            <fieldset>
                                <div class="col-md-4">
                                    <uib-accordion close-others="oneAtATime">
                                        <div uib-accordion-group class="panel-primary accordion-panel gl" is-open="caracteristica.open">
                                            <uib-accordion-heading>
                                                <span ng-click="accion(caracteristica.open)">
                                                    Agregar Caracteristica <i class="pull-right glyphicon" ng-class="{'glyphicon-minus-sign': caracteristica.open, 'glyphicon-plus-sign': !caracteristica.open}"></i>
                                                </span>
                                            </uib-accordion-heading>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label for="nombreCaracteristica">Nombre</label>
                                                    <input id="nombreCaracteristica" class="form-control input-panel" uppercase-only placeholder="Nombre Caracteristica" ng-model="caracteristica.Nombre" />
                                                </div>
                                                <div class="col-md-12">
                                                    <label for="descripcionCaracteristica">Descripción</label>
                                                    <input id="descripcionCaracteristica" class="form-control input-panel" uppercase-only placeholder="Descripcion Caracteristica" ng-model="caracteristica.Descripcion" />
                                                </div>
                                                <div class="col-md-12" style="margin-top:15px;">
                                                    <a class="btn btn-primary btn-sm" ng-disabled="  !caracteristica.Nombre || !caracteristica.Descripcion" ng-click="guardarCaracteristica(caracteristica)"><span class="glyphicon glyphicon-floppy-disk"></span> GUARDAR</a>
                                                </div>
                                            </div>
                                        </div>
                                    </uib-accordion>
                                </div>
                                <div class="col-md-8">
                                    <p style="margin-left:15px;"><strong>CARACTERISTICAS COMUNES</strong></p>
                                    <div class="col-md-6" ng-repeat="item in caracteristicas | filter: { EsComun: true}" style="word-wrap: break-word;">
                                        <div class="form-group">
                                            <div class="checkbox checkbox-primary">
                                                <input id="checkbox-caracteristicas-comunes-{{$index+1}}" type="checkbox" class="styled"
                                                       value="{{item.Id}}" ng-checked="caracteristicasSeleccionadas.indexOf(item.Id)>-1" ng-click="seleccion(item)">
                                                <label for="checkbox-caracteristicas-comunes-{{$index+1}}">{{item.Nombre}}</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>