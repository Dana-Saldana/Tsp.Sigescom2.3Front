<div id="modal-servicio" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Registro de Servicio</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form name="servicioForm">
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="box box-success">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">Nombre</h3>
                                        </div>
                                        <div class="box-body">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <div class="form-group">
                                                        <label>Nombre Basico</label>
                                                        <select id="nombre-basico" class="select444 form-control" ng-model="modelo.IdArticulo" ng-options="item.Id as item.Nombre for item in articulos track by item.Id"></select>
                                                    </div>
                                                </div>
                                                <div class="col-xs-12">
                                                    <div class="form-group">
                                                        <label>Sufijo</label>
                                                        <input id="sufijo" placeholder="Sufijo" type="text" ng-model="modelo.Sufijo" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="box box-success">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">Datos Complementarios</h3>
                                        </div>
                                        <div class="box-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label title="Unidad de medida">Unidad Medida</label>
                                                        <select id="unidad-medida" class="select444 form-control" ng-model="modelo.IdUnidadMedidaComercial" ng-options="item.Id as item.Nombre for item in unidadesDeMedida track by item.Id"></select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Precio Venta</label>
                                                        <input id="precio" ng-model="modelo.PrecioVenta" class="form-control number" />
                                                    </div>
                                                </div>
                                                <div class="col-xs-12">
                                                    <div class="form-group">
                                                        <label>Descripcion</label>
                                                        <textarea id="informacion" ng-model="modelo.informacion" class="form-control" placeholder="Breve descripción"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <a ng-disabled="servicioForm.$invalid" ng-click="servicio.edicion?guardar():actualizar()" class="btn btn-primary btn-flat pull-left"><span class="glyphicon glyphicon-floppy-disk"></span> GUARDAR</a>
                <a ng-click="close()" title="Cerrar" class="btn btn-flat btn-danger"><span class="glyphicon glyphicon-remove"></span> CERRAR</a>
            </div>
        </div>
    </div>
</div>


