<div id="modal-registro-configuracion" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">REGISTRO DE CONFIGURACION</h4>
            </div>
            <div class="modal-body">
                <form name="configuracionForm">
                    <div class="form-group">
                            <label for="codigo">NOMBRE:</label>
                            <input type="text" class="form-control" id="nombre" placeholder="Nombre de configuracion" ng-model="configuracion.Nombre" required />
                    </div>
                    <div class="form-group">
                            <label for="descripcion">DESCRIPCION:</label>
                            <input class="form-control" id="descripcion" placeholder="Descripcion de Configuracion" ng-model="configuracion.Descripcion" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a ng-disabled="configuracionForm.$invalid" ng-click="nuevaConfiguracion(configuracion)" class="btn btn-flat btn-primary pull-left"><span class="glyphicon glyphicon-floppy-disk"></span> GUARDAR</a>
                <a  title="Cerrar" ng-click="cerrar()" class="btn btn-danger btn-flat"><span class="glyphicon glyphicon-remove"></span> CERRAR</a>
            </div>
        </div>
    </div>
</div>
