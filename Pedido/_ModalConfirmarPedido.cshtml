<div id="modal-confirmar-pedido" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">CONFIRMAR PEDIDO</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form name="registro-venta" class="formulario form-horizontal" ctrl-enter ng-cloak>
                        <div class="col-md-6">
                            <div class="box box-primary">
                                <div class="box-body no-pad-top">
                                    <div class="row">
                                        <div class="col-md-12 table-responsive" style="padding-left:0">
                                            <div id="pdfDocumento" style="width:{{tamanioComprobante}}; border:solid; border-width: thin; margin:auto; margin-top:10px"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div ng-hide="true">
                            <registrador-detalles ng-if="inicializacionRealizada && inicializacionRealizadaFacturacion" api="$parent.registradorDetallesAPI_Facturacion" operacion="pedido.Orden" registrar-flete="permitirRegistroFlete" cursor-por-defecto-codigo-barra="cursorInicialEnCodigoBarra" cambiar-importe-total="cambiarImporteTotal_Facturacion(importeTotal)" validar-registrador-detalles="validarRegistradorDetallesPedidos_Facturacion()" inicio-realizado="inicioRealizadoRegistroDetalles_Facturacion()" seleccionar-codigo-balanza="focusCodigoBalanza_Facturacion()" set-focus-serie-comprobante="setFocusSerieComprobante_Facturacion()"></registrador-detalles>
                        </div>*@
                        <div class="col-md-6 no-padding-left">
                            <div class="box-body pt-0">
                                <facturacion-venta ng-if="inicializacionRealizada" external-id="1" api="$parent.facturacionVentaAPI" facturacion="pedido" mostrar-punto-de-venta-vendedor="esVentaModoCajaAlmacen" debe-seleccionar-punto-de-venta-vendedor="mostrarCodigoBarraBalanza || esVentaModoCajaAlmacen" debe-seleccionar-almacen-almacenero="false" debe-seleccionar-caja-cajero="false" debe-permitir-detalle-unificado="true" permitir-registro-fecha-emision="esVentaPorContingencia" permitir-registro-placa="permitirRegistroPlaca" id-medio-pago-default="idMedioDePagoEfectivo" importe-total="pedido.Total.toFixed(2)" cambio-igv="cambiarAfeccionIgv_Facturacion(aplicarIgv)" inicio-realizado="inicioRealizado_Facturacion(facturacion)" carga-total-realizada="cargaRealizada_Facturacion()" serie-comprobante-enter="serieComprobanteEnter_Facturacion()" change-facturacion="cambio_Facturacion()" cambiar-comprobante-por-defecto="true" evitar-asignar-comprobante-por-defecto="true"></facturacion-venta>
                            </div>
                            <div class="box box-danger" ng-show="inconsistenciasConfirmarPedido.length > 0">
                                <div class="box-body">
                                    <h4 class="error-title">INCONSISTENCIA(S):</h4>
                                    <table>
                                        <tr ng-repeat="item in inconsistenciasConfirmarPedido">
                                            <td colspan="1" style="color:#bb1f1f">{{item}}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-md" title="GUARDAR PEDIDO" ng-disabled="inconsistenciasConfirmarPedido.length > 0" ng-click="confirmarPedido()"><span class="glyphicon glyphicon-floppy-save"></span> GUARDAR PEDIDO</button>
                <button class="btn btn-md btn-danger" title="CERRAR" ng-click="cerrarConfirmarPedido()" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> CERRAR</button>
            </div>
        </div>
    </div>
</div>
