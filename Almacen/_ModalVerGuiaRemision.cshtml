<div id="modal-ver-guia-remision" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" style="width:80%">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">GUIA DE REMISION {{verGuiaRemision.SerieNumeroDocumento}}</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-5">
                        @*<label class="col-md-12 ">Acciones :</label>
                        <button ng-show="verGuiaRemision.AccionInvalidar" title="INVALIDA LA GUIA DE REMISION" ng-click="inicializarInvalidacion()" data-toggle="modal" data-target="#modal-invalidar-documento" class="btn btn-md btn-warning">INVALIDAR</button>*@
                    </div>
                    <div class="col-md-3">
                        <label class="col-md-12 ">Formato :</label>
                        <div class="col-md-12">
                            <select class="select2 form-control" id="comboFormato" ng-model="formato" ng-change="cargarGuiaRemision();" ng-options="item as item.Nombre for item in formatosDeImpresion track by item.Id"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="col-md-12 ">Acciones :</label>
                        <button title="IMPRIMIR EL DOCUMENTO" class="btn btn-md btn-primary" ng-click="imprimirGuiaRemision()"><span class="glyphicon glyphicon-print"></span></button>
                        <div class="btn-group">
                            <a title="DESCARGAR EN PDF" class="btn btn-md btn-primary" href="@Url.Action("DescargarDocumentoPdf", "Almacen")?idGuiaRemision={{verGuiaRemision.Id}}&&formato={{formato.Id}}" ><span class="fa fa-file-pdf-o"></span></a>
                            <a class="btn btn-primary dropdown-toggle grupo-boton" data-toggle="dropdown" aria-expanded="false">
                                <span class="caret"></span>
                                <span class="sr-only"></span>
                            </a>
                            <div class="dropdown-menu" role="menu" style="min-width:85px">
                                <a title="DESCARGAR EN XML" class="btn btn-md btn-primary" href="@Url.Action("DescargarDocumentoXml", "Almacen")?idGuiaRemision={{verGuiaRemision.Id}}" ><span class="fa fa-file-code-o"></span></a>
                                <a title="DESCARGAR EN ZIP" class="btn btn-md btn-primary" href="@Url.Action("DescargarDocumento", "Almacen")?idGuiaRemision={{verGuiaRemision.Id}}&&formato={{formato.Id}}" ><span class="fa fa-file-zip-o"></span></a>
                            </div>
                        </div>
                        <button title="ENVIAR POR CORREO ELECTRONICO" class="btn btn-md btn-primary" data-toggle="modal" data-target="#modal-envio-documento" ng-click="inicializarEnvio()"><span class="glyphicon glyphicon-envelope"></span></button>
                    </div>
                    <div class="col-md-12" style="padding-top:15px">
                        <div class="box box-primary">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <form name="comprobante" class="form-horizontal">
                                            <div class="col-md-12">
                                                <div id="pdfDocumento" style="width:{{tamanioComprobante}}; border:solid; border-width: thin; font-family: auto; margin:auto; margin-top:15px"></div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-md btn-danger" title="CERRAR" ng-click="cerrarVerGuiaRemision()" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> CERRAR</button>
            </div>
        </div>
    </div>
    @Html.Partial("../Venta/_ModalInvalidarDocumento")
    @Html.Partial("../Venta/_ModalEnvioDeDocumento")
</div>