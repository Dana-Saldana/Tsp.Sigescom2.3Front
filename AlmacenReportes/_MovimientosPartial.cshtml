
    @*MOVIMIENTOS*@
<div ng-show="reporteador.SeccionSeleccionada=='seccion3'">


    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Criterios y filtros </h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-2" id="input-establecimiento">
                    <div class="form-group">
                        <label for="punto1" class="title-report">Establecimiento*</label>
                        <select id="" class="select2 form-control" ng-model="reporteador.Movimientos.EstablecimientoSeleccionado" ng-options="item as item.Nombre for item in data.Establecimientos  track by item.Id" required ng-change="Movimientos_EstablecimientoChanged()"></select>
                    </div>
                </div>
                <div class="col-md-2" id="input-almacen">
                    <div class="form-group">
                        <label for="documento">Almacén*</label>
                        <select class="select2 form-control" ng-model="reporteador.Movimientos.AlmacenSeleccionado" ng-change="Movimientos_actualizarURLs()" ng-options="item as item.Nombre for item in reporteador.Movimientos.EstablecimientoSeleccionado.CentrosAtencion  track by item.Id"></select>
                    </div>
                </div>
               
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="dateEnd">Desde </label>
                            <div>
                                <input type="text" datetime="dd/MM/yyyy HH:mm:ss a" ng-model="reporteador.Movimientos.FechaDesde" ng-change="Movimientos_actualizarURLs()" class="form-control">
                            </div>
                        </div>
                    </div>
              
        
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="dateEnd">Hasta </label>
                            <div>
                                <input type="text" datetime="dd/MM/yyyy HH:mm:ss a" ng-model="reporteador.Movimientos.FechaHasta" ng-change="Movimientos_actualizarURLs()" class="form-control">
                            </div>
                        </div>
                    </div>
               
                <div class="col-md-2" id="input-almacen">
                    <div class="form-group">
                        <div>
                            <label class="col-md-6">Familias</label>
                            <div class="checkbox checkbox-primary col-md-6 no-margin ">
                                <input id="todasLasFamilias" type="checkbox" class="styled" ng-model="reporteador.Movimientos.SeleccionarTodasLasFamilias" ng-change="Movimientos_TodasLasFamiliasChanged()" />
                                <label class="negrita">Todas</label>
                            </div>
                        </div>

                        <select id="Movimientos_familias" class="select2 form-control" ng-model="reporteador.Movimientos.FamiliasSeleccionadas" ng-change="Movimientos_FamiliasChanged()" ng-options="item as item.Nombre for item in data.Familias  track by item.Id" multiple="multiple"></select>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div>
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Entradas</h3>
            </div>
            <div class="box-body">
                <div class="row ">
                    <div class="col-md-2">
                        <div class="form-group">
                            <a title="Reporte conceptos proximos a vencer " class="btn btn-primary btn-flat mt-20" ng-disabled="!reporteador.Movimientos.Entradas.ActivarBotonVer" ng-href="{{URLMovimientos_Entradas}}">VER</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div>
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Salidas</h3>
            </div>
            <div class="box-body">
                <div class="row ">
                    <div class="col-md-2">
                        <div class="form-group">
                            <a title="Reporte conceptos proximos a vencer " class="btn btn-primary btn-flat mt-20" ng-disabled="!reporteador.Movimientos.Salidas.ActivarBotonVer" ng-href="{{URLMovimientos_Salidas}}">VER</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div>
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Vencimiento de Bienes</h3>
            </div>
            <div class="box-body">
                <div class="row ">
                    <div class="col-md-2">
                        <div class="form-group">
                            <a title="Vencimiento de bienes" class="btn btn-primary btn-flat mt-20" ng-disabled="!reporteador.Movimientos.Vencimientos.ActivarBotonVer" ng-href="{{URLMovimientos_Vencimientos}}">VER</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

