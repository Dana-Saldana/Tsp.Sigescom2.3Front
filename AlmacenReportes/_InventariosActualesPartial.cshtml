
    @*INVENTARIOS - varios almacenes*@
<div ng-show="reporteador.SeccionSeleccionada=='seccion2'">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Criterios y filtros </h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <div>
                            <label class="col-md-6">Almacenes</label>
                            <div class="checkbox checkbox-primary col-md-6 no-margin ">
                                <input id="todosLosAlmacenes_inventarioActual" type="checkbox" class="styled" ng-model="reporteador.InventariosActuales.SeleccionarTodosLosAlmacenes" ng-change="InventariosActuales_TodosLosAlmacenesChanged()" />
                                <label class="negrita">Todos</label>
                            </div>
                        </div>
                        <select id="InventariosActuales_almacenes" class="select2 form-control" ng-model="reporteador.InventariosActuales.AlmacenesSeleccionados" ng-change="InventariosActuales_AlmacenesChanged()" ng-options="item as item.Nombre for item in data.Almacenes  track by item.Id" required multiple="multiple"></select>
                    </div>

                </div>

                <div class="col-md-3" id="input-almacen">
                    <div class="form-group">
                        <div>
                            <label class="col-md-6">Familias</label>
                            <div class="checkbox checkbox-primary col-md-6 no-margin ">
                                <input id="todasLasFamilias_inventarioActual" type="checkbox" class="styled" ng-model="reporteador.InventariosActuales.SeleccionarTodasLasFamilias" ng-change="InventariosActuales_TodasLasFamiliasChanged()" />
                                <label class="negrita">Todas</label>
                            </div>
                        </div>

                        <select id="InventariosActuales_familias" class="select2 form-control" ng-model="reporteador.InventariosActuales.FamiliasSeleccionadas" ng-change="InventariosActuales_FamiliasChanged()" ng-options="item as item.Nombre for item in data.Familias  track by item.Id" multiple="multiple"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Inventario Físico</h3>
        </div>
        <div class="box-body">
            <div class="row ">
                <div class="col-md-4">
                    <div class="form-group">
                        <br />
                        <a title="Inventario" class="btn btn-primary btn-flat" ng-disabled="!reporteador.InventariosActuales.Inventario.ActivarBotonVer" ng-href="{{URLInventariosActuales_Inventario}}">VER</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Inventario - Semáforo</h3>
        </div>
        <div class="box-body">
            <div class="row">

                <div class="col-md-4">
                    <div class="col-md-4">
                        <div class="checkbox checkbox-primary">
                            <input id="estadoBajoReporteStock" type="checkbox" class="styled" ng-model="reporteador.InventariosActuales.InventarioSemaforo.Semaforo.Bajo" ng-change="Actualizar_URLInventariosActuales_InventarioSemaforo()" />
                            <label for="estadoBajoReporteStock" class="negrita" style="color:red">Bajo</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="checkbox checkbox-primary">
                            <input id="estadoModeradoReporteStock" type="checkbox" class="styled" ng-model="reporteador.InventariosActuales.InventarioSemaforo.Semaforo.Normal" ng-change="Actualizar_URLInventariosActuales_InventarioSemaforo()" />
                            <label for="estadoModeradoReporteStock" class="negrita" style="color:darkgreen">Normal</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="checkbox checkbox-primary">
                            <input id="estadoConfortableReporteStock" type="checkbox" class="styled" ng-model="reporteador.InventariosActuales.InventarioSemaforo.Semaforo.Alto" ng-change="Actualizar_URLInventariosActuales_InventarioSemaforo()" />
                            <label for="estadoConfortableReporteStock" class="negrita" style="color: darkorange">Alto</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <a title="Inventario - semáforo" class="btn btn-primary btn-flat" ng-disabled="!reporteador.InventariosActuales.InventarioSemaforo.ActivarBotonVer" ng-href="{{URLInventariosActuales_InventarioSemaforo}}">VER</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Inventario Valorizado</h3>
        </div>
        <div class="box-body">
            <div class="row ">
                <div class="col-md-4">
                    <div class="form-group">
                        <br />
                        <a title="Inventario Valorizado" class="btn btn-primary btn-flat" ng-disabled="!reporteador.InventariosActuales.InventarioValorizado.ActivarBotonVer" ng-href="{{URLInventariosActuales_InventarioValorizado}}">VER</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
