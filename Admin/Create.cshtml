@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Crear Usuario";
}
@section scripts{
    <script src=@Url.Content("~/Scripts/controller/admin/adminController.js")></script>
}
    <div ng-controller="usuarioController" class="col-md-12 formulario-mediano">
            <div class="row">
                <div class="col-xs-12">
                    <div class="color-palette-set">
                        <div class="bg-green color-palette">REGISTRO DE USUARIOS</div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="box box-success">
                        <div class="box-body">
                            <div class="row">
                                <div class="form-horizontal col-md-5">
                                    <form name="usuario" ng-cloak>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">E-mail</label>
                                            <div class="col-md-10">
                                                <input class="form-control lowercase padding-left-right-3" type="email" ng-model="model.EMail" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">Clave</label>
                                            <div class="col-md-10">
                                                <input class="form-control lowercase padding-left-right-3" type="password" ng-model="model.Password" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">Rol</label>
                                            <div class="col-md-10">
                                                <select id="rol" class="select2 form-control col-md-4" ng-model="rol.RoleName" ng-change="agregarRol()">
                                                    <option ng-repeat="item in roles " value="{{item.Value}}">
                                                        {{item.Text}}
                                                    </option>
                                                </select>
                                                @*<select ng-model="rol.RoleName" ng-change="agregarRol()" ng-options="item.Value as item.Text for item in roles track by item.Value"></select>*@
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <a class="btn btn-flat btn-primary" ng-disabled="usuario.$invalid" ng-click="guardarUsuario()">GUARDAR</a>
                                                @Html.ActionLink("CANCELAR", "Index", null, new { @class = "btn btn-flat btn-danger cancelar" })
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


