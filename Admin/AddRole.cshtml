@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Crear Rol";
}
@section scripts{
    <script src=@Url.Content("~/Scripts/controller/admin/adminController.js")></script>
}
    <div ng-controller="rolController" class="col-md-12 formulario-mediano">
        <div class="row">
            <div class="col-xs-12">
                <div class="color-palette-set">
                    <div class="bg-green color-palette">REGISTRO DE ROL</div>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="box box-success">
                    <div class="box-body">
                        <div class="form-horizontal col-md-5">
                            <form name="rol" ng-cloak>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Rol</label>
                                    <div class="col-md-10">
                                        <input class="form-control lowercase padding-left-right-3" ng-model="model.RoleName" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <a class="btn btn-flat btn-primary" ng-disabled="rol.$invalid" ng-click="guardarRol()">GUARDAR</a>
                                        @Html.ActionLink("CANCELAR", "ViewAllRoles", null, new { @class = "btn btn-flat btn-danger cancelar" })
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
