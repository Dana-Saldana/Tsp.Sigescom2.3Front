<div id="modal-registrar-checkIn" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form name="formularioRegistrarCheckIn" id="formularioRegistrarCheckIn">
                <div class="modal-header bg-primary">
                    <h4 class="modal-title">REGISTRAR CHECK IN</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <label for="textarea">Observación</label>
                            <textarea class="form-control" rows="3" maxlength="250" ng-model="observacionCheckIn"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a title="Guardar" ng-click="checkInAtencion()" ng-disabled="observacionCheckIn == undefined || observacionCheckIn.length == 0 || observacionCheckIn.length > 250" class="btn btn-flat btn-primary pull-left"><span class="glyphicon glyphicon-floppy-disk"></span> GUARDAR</a>
                    <a title="Cerrar" ng-click="cerrarModal('modal-registrar-checkIn')" class="btn btn-danger btn-flat"><span class="glyphicon glyphicon-remove"></span> CERRAR</a>
                </div>
            </form>
        </div>
    </div>
</div>

