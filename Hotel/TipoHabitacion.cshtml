@{
    ViewBag.Title = "Tipos de habitacion";
}
@section scripts{
    <script src=@Url.Content("~/Scripts/controller/hotel/tipoHabitacionController.js")></script>
    <script>
        var idFamiliaHabitacion = @ViewBag.idFamiliaHabitacion;
        var idCaracteristicaAforoAdultos = @ViewBag.idCaracteristicaAforoAdultos;
        var idCaracteristicaAforoNinos = @ViewBag.idCaracteristicaAforoNinos;
        var numeroDecimalesEnPrecio = @ViewBag.numeroDecimalesEnPrecio;
        var tamanioMaximoFotoTipoHabitacion = @ViewBag.tamanioMaximoFotoTipoHabitacion;
        var maximaCantidadFotoTipoHabitacion = @ViewBag.maximaCantidadFotoTipoHabitacion;
    </script>
}
<div class="col-md-12 no-padding" id="tipoHabitacion" ng-controller="tipoHabitacionController" ng-init="inicializar()">
    <div class="col-md-12">
        <div class="color-palette-set">
            <div class="bg-green color-palette">TIPO DE HABITACIÓN</div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="box box-success">
            <div class="box-body">
                <div class="col-md-8">
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class=" col-md-3">
                            <button class="btn btn-primary btn-block"  style="margin-top:3px" ng-click="obtenerTipoHabitaciones()">
                                <span class="fa fa-search"></span>
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-primary btn-block" style="margin-top: 3px" title="DESCARGAR" ng-click="export('tabla-tipoHabitacion')">
                                <span class="fa fa-file-excel-o"></span>
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-primary btn-block" style="margin-top:3px" ng-click="abrirRegistroTipoHabitacion()">
                                <span class="glyphicon glyphicon-plus"></span> Tipo de Habitación
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="box box-success">
            <div class="box-body">
                <div class="row">
                    <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12 table-responsive principal-tablaResponsiva">
                        <table id="tabla-tipoHabitacion" datatable="ng" dt-options="dtOptions" dt-column-defs="habitaciones.dtColumnDefs" class="table table-stripped table-bordered dateTable tabla-responsiva">
                            <thead>
                                <tr class="filters">
                                    <th scope="col">Item</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Capacidad</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col">Vigente</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="tipoHabitacion in tipoHabitaciones" ng-cloak>
                                    <td scope="row" data-label="Item">{{$index+1}}</td>
                                    <td scope="row" data-label="Nombre" class="width-100">{{tipoHabitacion.Nombre}}</td>
                                    <td scope="row" data-label="Capacidad">{{tipoHabitacion.Capacidad}}</td>
                                    <td scope="row" data-label="Precio">{{tipoHabitacion.Precio}}</td>
                                    <td scope="row" data-label="Vigente"><div class="hide">{{tipoHabitacion.EsVigente ? 'SI' : 'NO'}}</div>
                                        <i title="{{tipoHabitacion.EsVigente ? 'SI' : 'NO'}}" class="fa fa-toggle-on" ng-model="tipoHabitacion.EsVigente" ng-class="tipoHabitacion.EsVigente ? 'activo' : 'fa-rotate-180 inactivo'" ng-click="cambiarEstadoTipoHabitacion(tipoHabitacion.Id)" />
                                    </td>
                                    <td scope="row" data-label="Acciones">
                                        <button title="Editar" class="btn btn-warning btn-xs btn-flat" data-toggle="modal" ng-click="editarTipoHabitacion(tipoHabitacion.Id)" style="background-color: #EB5C24"><span class="fa fa-pencil"></span></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Nuevo_TipoHabitacion")
</div>