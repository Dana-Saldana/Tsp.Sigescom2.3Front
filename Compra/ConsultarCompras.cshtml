<div class="col-md-12" id="modelo" ng-controller="compraController" ng-init="inicializarDesdeBandejaCompras()">
    <div class="row">
        <div class="col-md-12">
            <div class="color-palette-set">
                <div class="bg-green color-palette">CONSULTA DE COMPRAS</div>
            </div>
        </div>
        <div class="col-md-12 form-horizontal">
            <div class="row">
                <div class="col-sx-12 col-sm-6 col-md-2">
                    <label> Fecha Inicial </label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input ng-model="fechaInicio" placeholder="dd/mm/aaaa" class="form-control datepicker-start2" />
                    </div>
                </div>
                <div class="col-sx-12 col-sm-6 col-md-2 no-padding-left">
                    <label> Fecha Final </label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input ng-model="fechaFin" placeholder="dd/mm/aaaa" class="form-control datepicker-end2" />
                    </div>
                </div>
                <div class="col-md-1 no-padding">
                    <button title="CONSULTAR" style="margin-top:25px" class="btn btn-md btn-primary" ng-click="listarBandeja(bandeja.FechaInicio,bandeja.FechaFinal)"><span class="glyphicon glyphicon-search"></span></button>
                    <button title="DESCARGAR" style="margin-top:25px" ng-click="export('tabla-compras')" class="btn btn-md btn-primary"><span class="fa fa-file-excel-o"></span></button>
                </div>
                <div class="col-md-7 no-padding-left">
                    <button title="NUEVA COMPRA" style="margin-top:25px" class="btn btn-md btn-primary pull-right" data-toggle="modal" data-target="#modal-registro-compra"><span class="glyphicon glyphicon-plus"></span> NUEVA COMPRA</button>
                </div>
            </div>
        </div>




        <div class="col-md-12" style="margin-top:10px">
            <table id="tabla-compras" datatable="ng" dt-options="dtOptions" dt-column-defs="compras.dtColumnDefs" class="row-border hover table table-stripped table-bordered">
                <thead>
                    <tr>
                        <th>N°</th>
                        <th>Fecha</th>
                        <th>Tipo Doc.</th>
                        <th>Documento</th>
                        <th>Proveedor</th>
                        <th>RUC</th>
                        <th>Total</th>
                        <th>Modo Pago</th>
                        <th>Estado</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in compras" ng-cloak>
                        <td>{{$index+1}}</td>
                        <td>{{item.Fecha}}</td>
                        <td title="{{item.TipoDocumento}}">{{item.CodigoDocumento}}</td>
                        <td>{{item.Numero}}</td>
                        <td>{{item.Proveedor}}</td>
                        <td>{{item.Ruc}}</td>
                        <td>{{item.Total}}</td>
                        <td>{{item.ModoPago}}</td>
                        <td>{{item.Estado}}</td>
                        <td>
                            <a title="Ver Detalles de Compra" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#modal-ver-documento" ng-click="inicializarVerDeDocumento(item)"><span class="glyphicon glyphicon-search"></span></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
