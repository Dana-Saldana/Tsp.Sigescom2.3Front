<div id="modal-registrar-caracteristica-propia" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" style="width:80%">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">REGISTRO DE CARACACTERISTICAS PROPIAS</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h3 style="text-align:center">{{modelo.Detalles[indexDetalle].Producto.Nombre}}</h3>
                                        <div class="col-md-12">
                                            <div class="panel panel-primary">
                                                <div class="panel-body">
                                                    <table class="table table-hover table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>N°</th>
                                                                <th ng-repeat="caracteristica in modelo.Detalles[indexDetalle].Producto.ConceptoBasico.NombresCaracteristicasPropias">{{ caracteristica.Nombre }}</th>
                                                                <td>OPCIÓN</td>
                                                            </tr>
                                                        </thead>
                                                        <tbody style="font-size:13px;" class="ng-cloak">
                                                            <tr ng-repeat="item in modelo.Detalles[indexDetalle].Producto.ConceptoBasico.CaracteristicasPropias">
                                                                <td>{{$index + 1}}</td>
                                                                <td ng-repeat="valor in item.Valores">
                                                                    <input class="form-control" ng-model="valor.Valor" onclick="this.select();" />
                                                                </td>
                                                                <td>
                                                                    <a class="btn btn-danger btn-sm" ng-click="quitarItemValorCaracteristicaPropia($index)"><span class="glyphicon glyphicon-remove"></span></a>
                                                                </td>
                                                            </tr>
                                                            <tr style="background:#e9bdbd;">
                                                                <td></td>
                                                                <td ng-repeat="caracteristica in  modelo.Detalles[indexDetalle].Producto.ConceptoBasico.NombresCaracteristicasPropias">
                                                                    <input class="form-control" ng-show="false" ng-model="valores[$index].IdDetalleMaestro" ng-init="valores[$index].IdDetalleMaestro = caracteristica.IdDetalleMaestro " />
                                                                    <input class="form-control" ng-model="valores[$index].Valor" onclick="this.select();" ng-enter="agregarItemValorCaracteristicaPropia($index)" id="valor-{{indexDetalle}}-{{$index}}" style="border-color:forestgreen;" />
                                                                </td>
                                                                <td>
                                                                    <a class="btn btn-success btn-sm" ng-click="agregarItemValorCaracteristicaPropia($index)"><span class="glyphicon glyphicon-plus"></span></a>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" title="GUARDAR" ng-disabled="" class="btn btn-md btn-primary" ng-click="guardarCaracteristicasPropias()"><span class="glyphicon glyphicon-floppy-disk"></span> GUARDAR</button>
                <button data-dismiss="modal" title="CERRAR" class="btn btn-md btn-danger"><span class="glyphicon glyphicon-remove"></span> CERRAR</button>
            </div>
        </div>
    </div>
</div>
