<div id="modal-registro-maestro" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">REGISTRO DE MAESTRO</h4>
                @*<a class="close" title="Cerrar" data-dismiss="modal"><span class="mdi mdi-close"></span></a>*@
            </div>
            <div class="modal-body">
                <form name="maestroForm">
                    <div class="form-group">
                            <label for="codigo">CÓDIGO:</label>
                            <input type="text" class="form-control" id="codigo" uppercase-only placeholder="Código Maestro" ng-model="maestro.Codigo" required />
                    </div>
                    <div class="form-group">
                            <label for="nombre">NOMBRE:</label>
                            <input class="form-control" id="nombre" uppercase-only placeholder="Nombre Maestro" ng-model="maestro.Nombre" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a ng-disabled="maestroForm.$invalid" ng-click="nuevoMaestro(maestro)" class="btn btn-flat btn-primary pull-left"><span class="glyphicon glyphicon-floppy-disk"></span> GUARDAR</a>
                <a  title="Cerrar" ng-click="cerrar()" class="btn btn-danger btn-flat"><span class="glyphicon glyphicon-remove"></span> CERRAR</a>
            </div>
        </div>
    </div>
</div>
