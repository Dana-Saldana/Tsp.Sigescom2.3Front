@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutTema.cshtml";
}
@section scripts{
<script>
    var idUbigeoPeru = @ViewData["idUbigeoPeru"];
    var rolNombre = '@ViewData["rolNombre"]';
</script>
    <script src=@Url.Content("~/Scripts/actorComercial/actorcomercialController.js")></script>
    <script src=@Url.Content("~/Scripts/tinymce/tinymce.min.js")></script>

    <script>
    $(function () {
        tinymce.init({ selector: '#condiciones' });
    } )

    </script>
}
@{string rolNombre = (string)(ViewData["rolNombre"]); }
<div ng-controller="actorcomercialController">
    <div style="display:none">
        <span id="model-id">@ViewData["idActor"]</span>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <span style="display:none" id="model-idRol">@ViewData["rolId"]</span>
            <div class="row">
                <div class="col-md-12 formulario-mediano">
                    <button class="cerrar-tab" style="display:none"></button>

                    <!--FORMULARIO ACTOR COMERCIAL-->
                    <form name="actorcomercialForm" class="form-horizontal">
                        <div class="panel panel-default">
                            <div class="panel-heading" style="padding:5px;">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4 ng-show="titulo" class="modal-title">NUEVO REGISTRO</h4>
                                        <h4 ng-hide="titulo" class="modal-title">{{actorComercial.RazonSocial}}</h4>
                                    </div>
                                    <div class="col-md-6 right">
                                        <button ng-disabled="actorcomercialForm.$invalid" type="button" ng-click="guardar()" style="padding:2px 6px;" class="btn btn-default btn-info">Guardar</button>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body padding-0">
                                    <div class="input-small">
                                        @Html.Partial("../ActorComercial/_DatosValidacionPartial")
                                        <div class="col-md-12">
                                            <h5>Datos Generales:</h5><label ng-show="!alerta" style="color:red">Usted esta modificando datos existentes</label>
                                            <div class="panel panel-default">
                                                <div class="panel-body ">
                                                    <div class="col-md-12 padding-top-bottom5">
                                                        <div class="col-md-12">
                                                            @Html.Partial("../ActorComercial/_DatosGeneralesPartial")
                                                            <div class="col-md-12">
                                                                @*<div class="form-group">*@
                                                                <h6 style="text-align:center">Domicilio Fiscal</h6>
                                                                @Html.Partial("../ActorComercial/_TablaDireccionFiscalPartial")
                                                                @*</div>*@
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <button id="botonModal" style="display:none" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#modalConfirmacion"></button>
    <div id="modalConfirmacion" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Informacion</h4>
                </div>
                <div class="modal-body">
                    <p>{{dataResult.mensaje}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" ng-show="dataResult.respuesta=='1'" ng-click="cargarActorComercial()" class="btn btn-default" data-dismiss="modal">Aceptar</button>
                    <button type="button" ng-show="dataResult.respuesta=='2'" ng-click="cargar()" class="btn btn-default" data-dismiss="modal">Aceptar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>

