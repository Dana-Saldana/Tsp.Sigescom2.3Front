<div id="registroDeVehiculo">
    <div class="col-md-12">
        <div class="panel panel-success" style="margin-top: 15px">
            <div class="panel-heading">REGISTRAR VEHICULO</div>
            <div class="panel-body">
                <div class="col-md-12" style="border:2px">
                    <div class="col-md-12">
                        <div class="col-md-9">
                            <label class="control-label">Tipo: </label>
                            <div class="form-group">
                                <div class="radio radio-primary radio-inline" ng-repeat="item in listaDeTiposDeVehiculos">
                                    <input type="radio" id="radio-{{item.Id}}" ng-model="$parent.vehiculoIngreso.TipoDeVehiculo" value="{{item}}" ng-checked="vehiculoIngreso.TipoDeVehiculo.Id==item.Id">
                                    <label for="radio-{{item.Id}}">{{item.Nombre}}</label>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="col-md-12">

                        <div class="col-md-3" >
                            <label class="control-label">Marca:</label>
                            <select class="select2 form-control" ng-model="vehiculoIngreso.Marca" ng-options="item as item.Nombre for item in listaDeMarcasDeVehiculos track by item.Id" required></select>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="Color">Color:</label>
                                <input type="text" ng-model="vehiculoIngreso.Color" class="form-control" id="Color">
                            </div>
                        </div>
                        <div class="col-md-1" >
                            <a title="Registrar Vehiculo" class="btn btn-warning btn-xs" ng-click="guardarVehiculo();"><span class="glyphicon glyphicon-save"></span></a>
                        </div>
                    </div>
                   
                </div>
                   
                </div>
            
        </div>
    </div>
</div>